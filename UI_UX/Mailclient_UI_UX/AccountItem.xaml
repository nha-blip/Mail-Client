<UserControl x:Class="Mailclient.AccountItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mailclient"
             mc:Ignorable="d" 
             Height="70" Width="330">
    <Border CornerRadius="10" Padding="10" Background="White" Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Avatar -->
            <Border Width="40" Height="40" CornerRadius="20" Background="#673ab7">
                <TextBlock Text="{Binding FirstLetter}" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White" FontSize="20"/>
            </Border>

            <!-- Name + Email -->
            <StackPanel Grid.Column="1" Margin="10,0">
                <TextBlock Text="{Binding DisplayName}" 
                           FontSize="15" FontWeight="Bold"/>
                <TextBlock Text="{Binding Email}" FontSize="13" Foreground="Gray"/>
            </StackPanel>

            <!-- Right Button -->
            <Button Grid.Column="2"
                    Content="{Binding ActionText}"
                    Padding="10,5"
                    Margin="5"
                    VerticalAlignment="Center"
                    Command="{Binding ActionCommand}"/>
        </Grid>
    </Border>
</UserControl>
