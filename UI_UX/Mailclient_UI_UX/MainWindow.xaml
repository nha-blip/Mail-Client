<Window x:Class="Mailclient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mailclient"
        mc:Ignorable="d"
        FontFamily="/Font/#Roboto"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="600" Width="1000">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">

            <Setter Property="Background" Value="#C3E7FF"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>

            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <Border x:Name="border" 
                                CornerRadius="8" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                >

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Border>
                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#AACCFF"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#80B3FF"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F1F3F4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">

                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="20" Height="40">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="/image/search.png"
                                       Margin="15,0,5,0"
                                       Height="20"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       VerticalAlignment="Center"/>
                                <TextBlock x:Name="placeholder"
                                           Grid.Column="1"
                                           Margin="11,0,0,0"
                                           Text="Search mail"
                                           Foreground="Gray"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Grid.Column="1"
                                              VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="Text" Value="">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0366FF"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>



        <Grid Grid.Row="0" 
        Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Border
             Grid.Column="0"
             Background="White" 
             MinHeight="64">
                <TextBox x:Name="SearchBar"
                    Style="{StaticResource SearchBoxStyle}"
                         TextChanged="TextBox_TextChanged"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         Margin="0,0,150,0"/>

            </Border>
            <Border Grid.Column="1">
                <Button Content="Login"
                        Width="60"
                        Style="{StaticResource PrimaryButton}"
                        Margin="10,0,30,0"
                        Click="OPLogin"/>
            </Border>
        </Grid>
        <Border Grid.Row="1" 
            Grid.Column="0" 
            Background="White" 
            MinWidth="260">
            <StackPanel Margin="10">
                <Border>
                    <Button 
                                Height="50"
                                Width="150"
                                Margin="0,20,40,20"
                                Style="{StaticResource PrimaryButton}"
                                Click="opcompose">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/image/pencil.png"
                                   Height="20"
                                   Margin="0,0,15,0"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   />
                            <TextBlock Text="Compose"
                                     Background="Transparent"
                                     FontSize="16"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </Border>
                <Button Height="40"
                        x:Name="inboxbt"
                        Style="{StaticResource PrimaryButton}"
                        Background="White"
                        Click="inbox" 
                        >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="/image/inbox.png"
                               Height="25"
                               HorizontalAlignment="Right"
                               Margin="0,0,20,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="Inbox"
                                   Grid.Column="1"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button Height="40"
                        x:Name="sentbt"
                        Style="{StaticResource PrimaryButton}"
                        Background="White"
                        Click="sent"
                        >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="/image/send.png"
                               Height="25"
                               HorizontalAlignment="Right"
                               Margin="0,0,20,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="Sent"
                                   Grid.Column="1"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button Height="40"
                        x:Name="spambt"
                        Style="{StaticResource PrimaryButton}"
                        Background="White"
                        Click="spam"
                        >

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="/image/spam1.png"
                               Height="25"
                               HorizontalAlignment="Right"
                               Margin="0,0,20,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="Spam"
                                   Grid.Column="1"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button Height="40"
                        x:Name="draftsbt"
                        Style="{StaticResource PrimaryButton}"
                        Background="White"
                        Click="drafts"
                        >

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="/image/note.png"
                               Height="25"
                               HorizontalAlignment="Right"
                               Margin="0,0,20,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="Drafts"
                                   Grid.Column="1"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button Height="40"
                        x:Name="allmailbt"
                        Style="{StaticResource PrimaryButton}"
                        Background="White"
                        Click="allmail"
                        >

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="/image/allmail.png"
                               Height="30"
                               HorizontalAlignment="Right"
                               Margin="0,0,20,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="All mail"
                                   Grid.Column="1"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Border>
        <Grid Grid.Row="1" 
                        Grid.Column="1" 
                        Background="White">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <ListBox x:Name="MyEmailList"
                BorderThickness="0"
                 HorizontalContentAlignment="Stretch"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#EAF1FB"/>
                                </Trigger>

                                <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                    <Setter Property="Background" Value="#E7F3FF"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                <Grid Margin="5,2" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="150"/>

                                        <ColumnDefinition Width="*"/>

                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox x:Name="Checkbox1"
                                              Grid.Column="0"
                                              IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                              Margin="0,0,10,0"
                                              />
                                    <TextBlock Text="{Binding Title}"
                                               Grid.Column="1"
                                               HorizontalAlignment="Left"
                                               Margin="0,0,20,0"
                                               TextTrimming="CharacterEllipsis"
                                               FontSize="15"/>
                                    <TextBlock Text="{Binding Subject}"
                                               Grid.Column="2"
                                               Margin="10,0,10,0"
                                               FontSize="15"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding DateDisplay}"
                                               Grid.Column="3"
                                               FontSize="15"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            <local:Compose x:Name="composecontent"
                           Visibility="Collapsed"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Margin="10"/>
        </Grid>
    </Grid>
</Window>
