<UserControl x:Class="Mailclient.forgotPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mailclient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">

            <Setter Property="Background" Value="#0366FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,30,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <Border x:Name="border" 
                        CornerRadius="8" 
                        Background="{TemplateBinding Background}">

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Border>
                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0058E6"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#004AD1"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="OPfgPassword"
          Margin="0,30,0,30">
        <Border 
            Background="White"
            CornerRadius="8" 
            Height="380"
            Width="300">
            <Border.Effect>
                <DropShadowEffect Direction="270" 
                              ShadowDepth="0" 
                              Color="#B0B0B0" 
                              Opacity="0.5" 
                              BlurRadius="15"/>
            </Border.Effect>
            <StackPanel Height="380"
                    Width="250"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
        >
                <Button Content="⭠"
                        HorizontalAlignment="Left"
                        Foreground="#575DFB"
                        Margin="0,20,0,0"
                        FontSize="30" 
                        Background="Transparent"
                        BorderThickness="0" 
                        Click="returnLogin"/>
                <TextBlock Text="Forgot Password?" 
                       FontSize="25"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="0,20,0,0"
                       FontWeight="Bold"
                       Foreground="#1F41BB"
                       />
                <TextBlock Text="Recover you password if you have 
                           forgot the password!"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"/>
                <TextBlock Text="Email"
                           Margin="0,20,0,0"/>
                <Border BorderBrush="#575DFB" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="2"
                    Background="White"
                     Margin="0,5,0,10">
                    <TextBox FontSize="12"
                         Margin="6"
                         BorderThickness="0"/>
                </Border>
                <Button Content="Submit"
                        BorderThickness="0"
                        Style="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
