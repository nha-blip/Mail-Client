<UserControl x:Class="Mailclient.Information"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mailclient"
             mc:Ignorable="d" 
             Background="Transparent"
             Height="370" Width="350">
    <Border Background="White" Padding="20" CornerRadius="10" Margin="10">
        <Border.Effect>
            <DropShadowEffect Direction="270" 
              ShadowDepth="0" 
              Color="#B0B0B0" 
              Opacity="0.5" 
              BlurRadius="15" />
        </Border.Effect>
        <StackPanel>
            <Image Source="/image/Logo_UIT_updated.jpg" Width="64" Height="64" Margin="0,0,0,10" RenderOptions.BitmapScalingMode="HighQuality"/>

            <TextBlock Text="Mail Client" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#0078D4"/>
            <TextBlock Text="Version 1.0.0 (Beta)" FontSize="12" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Ứng dụng quản lý Email giao diện hiện đại, hỗ trợ HTML, tích hợp thông báo hệ thống và chế độ đọc an toàn." 
                   TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,10" Foreground="#333"/>

            <TextBlock HorizontalAlignment="Center" Margin="0,5">
            <Hyperlink NavigateUri="https://github.com/nha-blip/Mail-Client" RequestNavigate="Hyperlink_RequestNavigate">
                Xem mã nguồn trên GitHub
            </Hyperlink>
            </TextBlock>

            <TextBlock HorizontalAlignment="Center" Margin="0,5">
                    <Hyperlink Click="lienhe">
                        Gửi phản hồi / Báo lỗi
                    </Hyperlink>    
            </TextBlock>



            <TextBlock Text="© 2025 Nhóm RubyChan Sinh Viên UIT. All rights reserved." 
                   FontSize="10" Foreground="#999" 
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0"/>
            <TextBlock Text="Giảng viên hướng dẫn Mai Trọng Khang" 
                   FontSize="10" Foreground="#999" 
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,0"/>

            <TextBlock Text="Powered by WPF &amp; .NET Core" 
                   FontSize="10" Foreground="#CCC" 
                   HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
