<Window x:Class="Mailclient.Logingg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mailclient"
        mc:Ignorable="d"
        FontFamily="/Font/#roboto"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Login" Height="450" Width="700"
        WindowStartupLocation="CenterScreen" MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border>
        <Border.Clip>
            <RectangleGeometry RadiusX="20" RadiusY="25" Rect="0,0,700,450"/>
        </Border.Clip>
        <Grid x:Name="MainGrid">
        <Image Source="/image/bg_uit.jpg"
               Stretch="UniformToFill"
               RenderOptions.BitmapScalingMode="HighQuality" />

        <Border Width="380" Height="250"
                CornerRadius="25"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">

                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#90FFFFFF" Offset="0"/>
                        <GradientStop Color="#20FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.BorderThickness>1.5</Border.BorderThickness>

                <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20" ShadowDepth="5"/>
            </Border.Effect>

            <Grid>
                <Border CornerRadius="25" ClipToBounds="True">
                    <Rectangle Margin="-5">
                        <Rectangle.Effect>
                                <BlurEffect Radius="80" KernelType="Gaussian"/>
                        </Rectangle.Effect>
                        <Rectangle.Fill>
                            <VisualBrush Visual="{Binding ElementName=MainGrid}" Stretch="None" AlignmentX="Center" AlignmentY="Center"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </Border>

                    <Border CornerRadius="25">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">

                                <GradientStop Color="#80FFFFFF" Offset="0"/>

                                <GradientStop Color="#20FFFFFF" Offset="1"/>

                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                        <TextBlock Text="Đăng nhập" Foreground="White" 
                               FontSize="20" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,20">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="5" ShadowDepth="2"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    <Button x:Name="login"
                            Width="220"
                            Style="{StaticResource PrimaryButton}"
                            Click="openACC">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/image/google_logo-removebg-preview.png"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   Width="24" Height="24" Margin="0,0,10,0"/>

                            <TextBlock Text="Tiếp tục với Google" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                        <Button x:Name="loginOffline"
                                Width="220"
                                Style="{StaticResource PrimaryButton}"
                                Click="Offline_Click"
                                Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/image/offline1.png"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   Width="24" Height="24" Margin="0,0,10,0"/>
                                <TextBlock Text="Đăng nhập Offline " VerticalAlignment="Center"/>
                            </StackPanel>
                            
                        </Button>

                </StackPanel>
            </Grid>
        </Border>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top" 
                        Margin="0,10,15,0">
                <Button Content="—" Width="30" Height="30"
                        Background="Transparent" BorderThickness="0"
                        Foreground="White" FontWeight="Bold" FontSize="16"
                        Cursor="Hand"
                        Click="Minimize_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="btnBorder" Background="Transparent" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="btnBorder" Property="Background" Value="#40FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="✕" Width="30" Height="30" Margin="5,0,0,0"
                        Background="Transparent" BorderThickness="0"
                        Foreground="White" FontWeight="Bold" FontSize="14"
                        Cursor="Hand"
                        Click="Close_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="btnBorder" Background="Transparent" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="btnBorder" Property="Background" Value="#C42B1C"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>