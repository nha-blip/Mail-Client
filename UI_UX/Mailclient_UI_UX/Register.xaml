<UserControl x:Class="Mailclient.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mailclient"
        mc:Ignorable="d"
        FontFamily="/Font/#Poppins"
        Height="450" Width="400">
    <UserControl.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">

            <Setter Property="Background" Value="#0366FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,30,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <Border x:Name="border" 
                        CornerRadius="8" 
                        Background="{TemplateBinding Background}">

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Border>
                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0058E6"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#004AD1"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
            <Border 
            Background="White"
            CornerRadius="8" 
            Height="380"
            Width="300">
                <Border.Effect>
                    <DropShadowEffect Direction="270" 
                              ShadowDepth="0" 
                              Color="#B0B0B0" 
                              Opacity="0.5" 
                              BlurRadius="15"/>
                </Border.Effect>
                <StackPanel Height="380"
                    Width="250"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
        >
                    <TextBlock Text="Register" 
                       FontSize="25"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,10"
                       FontWeight="Bold"
                       Foreground="#1F41BB"
                       />
                    <TextBlock Text="Email"/>
                    <Border BorderBrush="#DDE1E6" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="2"
                    Background="White"
                     Margin="0,5,0,10">
                        <TextBox FontSize="12"
                         Margin="6"
                         BorderThickness="0"/>
                    </Border>
                    <TextBlock Text="Password"/>
                    <Border BorderBrush="#DDE1E6" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="2"
                    Background="White"
                    Margin="0,5,0,10">
                        <PasswordBox FontSize="12"
                             Margin="6"
                             BorderThickness="0"/>
                    </Border>
                    <TextBlock Text="Confirm password"/>
                    <Border  BorderBrush="#DDE1E6" 
                     BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="2"
                    Background="White"
                     Margin="0,5,0,0">
                        <PasswordBox FontSize="12"
                             Margin="6"
                             BorderThickness="0"/>
                    </Border>
                    <Button Content="Register"
                        BorderThickness="0"
                        Style="{StaticResource PrimaryButton}"/>
                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                        <TextBlock Text="Already have an account?"
                           Margin="6"/>
                        <TextBlock Text="Login"
                           Margin="6"
                           TextDecorations="Underline"
                           Foreground="#575DFB"
                           FontWeight="Bold"
                           MouseUp="oplogin"
                           Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
</UserControl>

