<Window x:Class="Mailclient.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mailclient"
        mc:Ignorable="d"
        FontFamily="/Font/#Poppins"
        Title="Login" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">

            <Setter Property="Background" Value="#0366FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,30,0,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <Border x:Name="border" 
                       CornerRadius="8" 
                       Background="{TemplateBinding Background}">

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Border>
                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0058E6"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#004AD1"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="White"
            CornerRadius="8" 
            Height="360"
            Width="300">
        <Border.Effect>
            <DropShadowEffect Direction="270" 
                              ShadowDepth="0" 
                              Color="#B0B0B0" 
                              Opacity="0.5" 
                              BlurRadius="15"/>
        </Border.Effect>
        <StackPanel Height="360"
                    Width="250"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
        >
            <TextBlock Text="Login" 
                       FontSize="25"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,0"
                       FontWeight="Bold"
                       Foreground="#1F41BB"
                       />
            <TextBlock Text="Username" 
                       Margin="0,20,0,0"
                       />
            <Border BorderBrush="#DDE1E6" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="2"
                    Background="White"
                     Margin="0,5,0,0"
                    >
                <TextBox x:Name="nameuser"
                        Height="33"
                         BorderThickness="0"
                         FontSize="14"
                         Padding="6"/>
            </Border>

            <TextBlock Text="Password"
                       Margin="0,20,0,0"/>
            <Border BorderBrush="#DDE1E6" 
                    BorderThickness="1" 
                     CornerRadius="8" 
                    Padding="2"
                    Background="White"
                    Margin="0,5,0,0"
                    >
                <Grid>
                    <TextBox x:Name="password1"
                             Height="33"
                             BorderThickness="0"
                             FontSize="14"
                             Padding="10,8,40,8"
                             VerticalContentAlignment="Center" 
                             Visibility="Collapsed" />

                    <PasswordBox x:Name="password"
                                 Height="33"
                                 BorderThickness="0"
                                 FontSize="14"
                                 Padding="10,8,40,8"
                                 VerticalContentAlignment="Center"
                                 />

                    <Button x:Name="eye"
                            Content="👁️"
                            Width="30" 
                            HorizontalAlignment="Right" Margin="0,0,8,0"          Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="14"
                            VerticalAlignment="Center"
                            Click="hide"
                            Focusable="False"/>
                </Grid>
            </Border>
            <Button x:Name="BTlogin"
                    Content="Login"
                    Style="{StaticResource PrimaryButton}"/>
                <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center" 
                Margin="0,15,0,0">
                <Label x:Name="forgotpw"
                       Content="Forgot password?"
                       Margin="0,0,40,0"
                       Foreground="#0366FF"
                       Cursor="Hand"
                       />
                <Label x:Name="register"
                       Content="Register"
                       Margin="30,0,0,0"
                       Foreground="#0366FF"
                       MouseDown="OPregister"
                       Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
